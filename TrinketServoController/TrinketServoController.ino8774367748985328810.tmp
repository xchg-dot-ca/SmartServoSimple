#include <Servo.h>

Servo myservo;  // create servo object to control a servo
// twelve servo objects can be created on most boards

int pos = 0;    // variable to store the servo position

void setup() {
  analogReference(AR_DEFAULT);
  analogReadResolution(12);
  myservo.attach(4);  // attaches the servo on pin 9 to the servo object
}

int samples = 5;
int val,val1,val2,val3,val4 = 0;
int values[5];
float stdDeviation = 0;

void loop() {
  /*
  for (pos = 0; pos <= 180; pos += 1) { // goes from 0 degrees to 180 degrees
    // in steps of 1 degree
    myservo.write(0);              // tell servo to go to position in variable 'pos'
    val = analogRead(A1);  // read the input pin
    Serial.println(val);          // debug value
    delay(100);                       // waits 15ms for the servo to reach the position
  }
  for (pos = 180; pos >= 0; pos -= 1) { // goes from 180 degrees to 0 degrees
    myservo.write(pos);              // tell servo to go to position in variable 'pos'
    val = analogRead(A1);  // read the input pin
    Serial.println(val);          // debug value
    delay(100);                       // waits 15ms for the servo to reach the position
  }
*/
    myservo.write(0);              // tell servo to go to position in variable 'pos'
    values[0] = analogRead(A1);  // read the input pin
    Serial.print(values[0]); Serial.print(" | ");          // debug value
    values[1] = analogRead(A1);  // read the input pin
    Serial.print(values[1]); Serial.print(" | ");          // debug value
    values[2] = analogRead(A1);  // read the input pin
    Serial.print(values[2]); Serial.print(" | ");          // debug value
    values[3] = analogRead(A1);  // read the input pin
    Serial.print(values[3]); Serial.print(" | ");          // debug value
    values[4] = analogRead(A1);  // read the input pin
    Serial.println(values[4]);          // debug value
  
  int i, sum = 0, mean =0 , variance = 0;
  
    for(i = 0; i < samples; ++i) {
      sum += values[i];
    }
    mean = sum / samples;
  
    for(i = 0; i < samples; ++i) {
      variance += pow(values[i] - mean, 2);
    }
    variance = variance / samples;
    stdDeviation = sqrt(variance);
    
    Serial.print("Average: "); Serial.println(mean);
    Serial.print("Variance: "); Serial.println(variance);
    Serial.print("Standard Deviation: "); Serial.println(stdDeviation);

    delay(5000);
    myservo.write(180);              // tell servo to go to position in variable 'pos'
    val = analogRead(A1);  // read the input pin
    Serial.println(val);          // debug value
    val = analogRead(A1);  // read the input pin
    Serial.println(val);          // debug value
    val = analogRead(A1);  // read the input pin
    Serial.println(val);          // debug value
    delay(5000);
}
